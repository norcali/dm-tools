<div class="col-xs-12">
	<h3><%= t("app_name") %></h3>
	<table class="table table-striped table-condensed">
	  <tbody>
	  	<% Character.all.each do |item| %>
		  	<tr>
		  		<td><%= link_to item.name, character_path(item), class: "btn btn-xs btn-success" %></td>
		  		<td><%= link_to 'to pdf', pdf_character_path(item), class: "btn btn-xs btn-info" %></td>
		  	</tr>
		  <% end %>
	  </tbody>
	</table>
	<div class="col-xs-12">
		<%= link_to 'New', new_character_path, class: "btn btn-md btn-success" %>
	</div>
</div>
