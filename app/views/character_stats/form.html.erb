<div class="col-md-12">
	<h3><%= t("helpers.submit.#{@_controller.action_name}") + ' ' +  t("activerecord.models.character_stat.one") %></h3>
</div>

<%= simple_form_for(@character_stat, html: {  }) do |f| %>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

	<div class="row">
		<div class="col-md-12">
			<div class="col-md-12">
				<div class="col-md-2 form-inputs">
					<%= f.input :strength %>
				</div>
				<div class="col-md-2 form-inputs">
					<%= f.input :dexterity %>
				</div>
				<div class="col-md-2 form-inputs">
					<%= f.input :constitution %>
				</div>
				<div class="col-md-2 form-inputs">
					<%= f.input :intelligence %>
				</div>
				<div class="col-md-2 form-inputs">
					<%= f.input :wisdom %>
				</div>
				<div class="col-md-2 form-inputs">
					<%= f.input :charisma %>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-12 bulto"></div>
	<div class="col-md-12">
		<%= link_to t('helpers.submit.back'), root_path, class: 'btn btn-primary' %>
	  <%= f.submit t("helpers.submit.#{@_controller.action_name}"), class: 'btn btn-info' %>

	  <% unless @character_stat.new_record? %>
	    <%= link_to t('helpers.submit.delete'), character_stat_path(@character_stat), method: :delete, class: 'btn btn-danger', data: { confirm: t('confirm.delete') } %>
	  <% end %>
	</div>
<% end %>