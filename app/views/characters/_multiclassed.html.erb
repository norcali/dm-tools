<% dc = @character.character_stat.spell_dc %>
<% sp_attack = @character.character_stat.spell_attack_bonus %>

<div class="col-xs-4 spell-attack spell">
	<div class="col-xs-12">
		<h2><%= dc.first %></h2>
	</div>
	<div class="col-xs-12">
		<h2><%= dc.last %></h2>
	</div>
</div>
<div class="col-xs-4 spell-dc spell">
	<div class="col-xs-12">
		<h2><%= sp_attack.first %></h2>
	</div>
	<div class="col-xs-12">
		<h2><%= sp_attack.last %></h2>
	</div>
</div>