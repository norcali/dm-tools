	<div class="col-xs-12 fourth-row row">
		<div class="col-xs-3">
			<div class="col-xs-12 bulto">
			</div>
		</div>

		<div class="col-xs-3 languages">
			<div class="col-xs-12 bulto">
				<div class="col-xs-12 bultito"></div>
				<div class="col-xs-12">
					<h3><%= @character.character_stat.print_languages %></h3>
				</div>
				<div class="col-xs-12">
					<h3><%= @character.character_stat.print_tools %></h3>
				</div>
				<div class="col-xs-12 features">
					<% @character.character_stat.class_features.each do |f| %>
						<h3><%= f %></h3>
					<% end %>
				</div>
			</div>
		</div>

		<div class="col-xs-6">
			<div class="col-xs-12 bulto features">
				<% @character.character_stat.features.each do |f| %>
					<h3><%= f %></h3>
				<% end %>
			</div>
		</div>
	</div>

	<div class="col-xs-12 fifth-row row">
		<div class="col-xs-4">
			<div class="col-xs-4 spells-prepared">
				<h1> 13 </h1>
			</div>
			<%= render 'spell_stats' %>
		</div>

		<div class="col-xs-8">
			<div class="col-xs-12">
				<% @character.character_stat.spell_slots.each do |slot| %>
					<div class="col-xs-1 slot">
						<h2><%= slot %></h2>
					</div>
				<% end %>
			</div>
