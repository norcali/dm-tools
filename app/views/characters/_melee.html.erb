<div class="col-xs-12" id="melee">

	<div class="col-xs-12 first-row row">

		<div class="col-xs-5 character-name">
			<h1><%= @character.name %></h1>
		</div>

		<div class="col-xs-7 basic-stats">
			<div class="col-xs-6">&nbsp</div>
			<div class="col-xs-5 player-name"><h2></h2></div>
			<div class="col-xs-12 row">
				<div class="col-xs-8">
					<h2> <%= @character.klass_name %></h2>
				</div>

				<div class="col-xs-4 race">
					<h2><%= @character.race.name %></h2>
				</div>
			</div>

			<div class="col-xs-12 row">
				<div class="col-xs-4 center-align background">
					<h2><%= @character.background.name %></h2>
				</div>

				<div class="col-xs-4 center-align alignment">
					<h2><%= @character.alignment %></h2>
				</div>

				<div class="col-xs-4 center-align experience">
					<h2><%= %></h2>
				</div>
			</div>
		</div>

	</div>

	<div class="col-xs-12 second-row row">

		<div class="col-xs-4">

			<div class="col-xs-12 proficiency-bonus row-item">
				<div class="col-xs-3">
					<h1><%= @character.proficiency_bonus %></h1>
				</div>
				<div class="col-xs-8"></div>
			</div>

			<div class="col-xs-12 bulto-chico"></div>

			<div class="col-xs-12 passive-perception row-item">
				<div class="col-xs-3">
					<div class="score">
						<h1><%= @character.character_stat.passive_perception %></h1>
					</div>
				</div>
			</div>

		</div>

		<div class="col-xs-4">
			<div class="col-xs-7">
				<div class="col-xs-12 bultito"></div>
				<div class="col-xs-7 hit-points row-item">
					<h1><%= @character.hit_points %></h1>
				</div>
			</div>
			<div class="col-xs-5">
				<div class="col-xs-6 bulto-chico">
				</div>
				<div class="col-xs-6">
					<div class="col-xs-2 hit-die row-item">
						<h2><%= @character.total_level %></h2>
					</div>
					<div class="col-xs-3"></div>
					<div class="col-xs-12 hit-die">
						<h1><%= @character.hit_dices %></h1>
					</div>
				</div>
			</div>
		</div>

		<div class="col-xs-4 column-3">
			<div class="col-xs-12">
				<div class="col-xs-4 armor-class">
					<h1><%= @character.armor_class %></h1>
				</div>
				<div class="col-xs-4 initiative">
					<h1><%= @character.initiative %></h1>
				</div>
				<div class="col-xs-4 speed">
					<h1><%= @character.speed %></h1>
				</div>
			</div>
		</div>

	</div>

	<div class="col-xs-12 third-row row">

		<div class="col-xs-2">
			<div class="col-xs-12 score strength">
				<% ability = @character.character_stat.get_ability('Strength') %>
				<h2><%= ability.value %> </h2>
			</div>

			<div class="col-xs-12 bonus">
				<h1><%= get_score_bonus(ability.score) %></h1>
			</div>
			<div class="col-xs-12 bulto-chiquito"></div>
			<div class="col-xs-12 skills strength">
				<div class="col-xs-10 saving-throw">
					<h3><%= ability.saving_throw.bonus %></h3>
				</div>
			</div>
			<div class="col-xs-12 skills strength">
				<div class="col-xs-10">
					<h3><%= ability.get_skill('athletics').bonus %></h3>
				</div>
			</div>
			<div class="col-xs-12 skills strength">
				<div class="col-xs-10">
					<h3><%= ability.get_skill('athletics').bonus %></h3>
				</div>
			</div>
		</div>

		<div class="col-xs-2">
